[alias]
	force-push = push --force-with-lease --force-if-includes
	graph = log --all --graph

	d = diff
	dd = difftool
	s = status
	sw = switch
[format]
	pretty = tformat:%C(auto)%h %C(green)%cd%C(auto) %s %C(cyan)@%an%C(auto)%d
[init]
	defaultBranch = main
[log]
	date = format-local:%F %R
[merge]
	ff = false
	tool = nvimdiff
[mergetool]
	keepBackup = false
[pull]
	ff = only
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
